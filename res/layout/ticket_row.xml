<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="100" android:gravity="center_vertical">


    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="horizontal"
                  android:weightSum="100"
                  android:gravity="center_vertical"
                  android:layout_gravity="center_vertical"
            >
        <TextView
                android:id="@+id/table_number_tv"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="16sp"
                android:paddingBottom="5dp"
                android:textStyle="normal"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left" android:layout_weight="10">
        </TextView>

        <TextView
                android:id="@+id/servant_name_tv"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Servant Name"
                android:textSize="16sp"
                android:paddingBottom="5dp"
                android:textStyle="normal"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left" android:layout_weight="40">
        </TextView>
        <TextView
                android:id="@+id/checkin_time_tv"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Check in Date"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:textStyle="normal"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left" android:layout_weight="30">
        </TextView>
        <TextView
                android:id="@+id/total_order_tv"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="$"
                android:textSize="16sp"
                android:paddingBottom="5dp"
                android:textStyle="normal"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left" android:singleLine="true" android:layout_weight="20">
        </TextView>
    </LinearLayout>
</LinearLayout>